{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": [2, "double"],
        "indent": ["error", 4],
        "indent_style" : "space",
        "charset" : "utf-8",
        "no-trailing-spaces": [2, { "skipBlankLines": true }],
        "eol-last" : ["error", "always"]
    }
}